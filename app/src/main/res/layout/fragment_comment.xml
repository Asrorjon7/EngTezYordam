<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.CommentFragment">
    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Unutmang\n Sizning qoldirgan izohingiz  jamiyatimizning rivoji uchun xizmat qiladi"
        android:textColor="#333333"
        android:textSize="@dimen/_14sdp">
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#CB8A8A8A"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"

        />

    <dev.yuganshtyagi.smileyrating.SmileyRatingView
        android:id="@+id/smiley_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_270sdp"
        app:face_color ="@color/colorPrimary"
        android:visibility="gone" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:text="Xizmat ko'rsatishni baholang"
        android:layout_marginTop="@dimen/_32sdp"
        android:fontFamily="@font/roboto"
        android:textColor="#333333"

        android:textSize="@dimen/_12sdp">
    </TextView>
    <com.hsalf.smilerating.SmileRating
        android:id="@+id/ratingView"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:angryColor="#F44336"
        app:drawingColor="#353431"
        app:normalColor="#FBC100"
        app:isIndicator="false"
        app:placeHolderBackgroundColor="#e6e8ed"
        app:placeHolderSmileColor="#ffffff"
        app:textNonSelectionColor="#4D4D55"
        app:textSelectionColor="#8F303030"
        android:layout_marginTop="@dimen/_8sdp"
        app:showLine="false"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CB8A8A8A"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        />

        <Switch
            android:id="@+id/swith"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:text="Korrupsion holat kuzatildimi      "
            android:textColor="#767676"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:textSize="@dimen/_12sdp"
            />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CB8A8A8A"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"

        />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:maxLines="4"
            android:layout_marginTop="@dimen/_32sdp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:hint="Izoh qoldiring"
            android:fontFamily="@font/roboto" />
          <View
              android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:background="#CB8A8A8A"
              android:layout_marginHorizontal="@dimen/_8sdp"
              />
    <com.google.android.material.button.MaterialButton

        android:id="@+id/btnSetComment"
        style="@style/AppTheme.GreenButton"
        android:layout_width="match_parent"

        android:layout_marginTop="@dimen/_12sdp"
        android:text="Izoh bering" />
</androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>